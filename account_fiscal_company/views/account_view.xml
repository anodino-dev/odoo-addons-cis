<!--                    old value : [('type','&lt;&gt;','view'),('type','&lt;&gt;','consolidation'), ('company_id', '=', parent.company_id)]-->
                    <attribute name="domain">[('type','&lt;&gt;','view'),('type','&lt;&gt;','consolidation')]</attribute> 
                </field>
            </field>
        </record>
        
