<openerp>
    <data>

<!-- Model: res.company -->
        <record id="view_res_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="fiscal_type"/>
                    <field name="fiscal_company"/>
                    <field name="code"/>
                </field>
                <notebook position="inside">
                    <page string="Fiscal information">
                        <field name="fiscal_childs" />
                    </page>
                </notebook>
            </field>
        </record>

<!-- Model: res.company.create.wizard -->
        <record id="view_res_company_create_wizard_form" model="ir.ui.view">
            <field name="name">Create a New Company</field>
            <field name="model">res.company.create.wizard</field>
            <field name="arch" type="xml">
                <form string="Create a New Company" version="7.0">
                    <field name="state" invisible="1"/>
                    <group col="4" states="init">
                        <separator string="General Information" colspan="4"/>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="mother_company"/>
                        <field name="code"/>
                    </group>
                    <notebook>
                        <page string="Accounting" states="init">
                            <group>
                            <field name="vat" attrs="{'invisible': [('type','not in',('associated'))]}"/>
                            </group>
                        </page>
                    </notebook>
                    <group states="done">
                        <separator string="User Information" colspan="4"/>
                        <field name="password" string="Password"/>
                    </group>
                    <footer>
                        <div states="init">
                            <button name="button_begin" string="Begin" type="object" class="oe_highlight"/>
                            <span>or</span>
                            <button special="cancel" string="Cancel" class="oe_link"/>
                        </div>
                        <div states="pending">
                            <button name="button_finish" string="Finish" type="object" class="oe_highlight"/>
                        </div>
                        <div states="done">
                            <button special="cancel" string="Close" class="oe_link"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>

